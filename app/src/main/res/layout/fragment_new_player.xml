<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.joshwing.ridethebus.NewPlayerFragment">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerInParent="true"
        android:gravity="center" >
        <ImageView
            android:id="@+id/playerPicture"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/blank"
            />
        <Button
            android:id="@+id/takePicture"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Take Picture"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/newPlayerNameTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Name:"/>
            <EditText
                android:id="@+id/newPlayerNameEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/newPlayerNameTextView"
                android:inputType="text"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/newPlayerMaxDrinksTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Max # of Drinks:"/>
            <EditText
                android:id="@+id/newPlayerMaxDrinksEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/newPlayerMaxDrinksTextView"
                android:inputType="number"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/newPlayerDrinkTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Drink:"/>
            <Spinner
                android:id="@+id/newPlayerDrinkSpinner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/newPlayerDrinkTextView"/>
        </RelativeLayout>
        <Button
            android:id="@+id/newPlayerCompleteButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Complete" />
    </LinearLayout>
</RelativeLayout>
