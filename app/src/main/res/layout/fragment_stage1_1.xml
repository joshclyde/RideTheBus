<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.joshwing.ridethebus.Stage1_1Fragment">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="10sp"
            android:layout_weight=".75"
            android:orientation="vertical"
            app:layout_constraintTop_toTopOf="parent">

            <RelativeLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <Button
                    android:layout_width="match_parent"
                    android:layout_height="40sp"
                    android:layout_alignParentLeft="true"
                    android:text="End Game"
                    android:textSize="10sp"/>
            </RelativeLayout>

            <RelativeLayout
                android:layout_marginTop="10sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center">

                <TextView
                    android:id="@+id/playerName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Player 1"
                    android:textStyle="bold"
                    android:textSize="25sp"
                    android:textColor="#000000"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    />

            </RelativeLayout>

            <TextView
                android:layout_marginTop="5sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Select one of the following:"
                android:layout_gravity="center"
                android:layout_marginBottom="5sp"/>

            <LinearLayout
                android:id="@+id/redOrBlack"
                android:layout_marginTop="10sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center">

                <Button
                    android:id="@+id/Red"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="30sp"
                    android:text="Red"/>

                <Button
                    android:id="@+id/Black"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Black"
                    android:layout_marginLeft="30sp"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/higherOrLower"
                android:layout_marginTop="10sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center">

                <Button
                    android:id="@+id/Higher"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="30sp"
                    android:text="Higher"/>

                <Button
                    android:id="@+id/Lower"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Lower"
                    android:layout_marginLeft="30sp"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/betweenOrOutside"
                android:layout_marginTop="10sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center">

                <Button
                    android:id="@+id/Between"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="30sp"
                    android:text="In Between"/>

                <Button
                    android:id="@+id/Outside"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Outside"
                    android:layout_marginLeft="30sp"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/suit"
                android:orientation="horizontal"
                android:layout_marginTop="10sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center">

                <Button
                    android:id="@+id/Diamonds"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Diamonds"/>
                <Button
                    android:id="@+id/Hearts"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Hearts"/>
                <Button
                    android:id="@+id/Clubs"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Clubs"/>

                <Button
                    android:id="@+id/Spades"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Spades"/>
            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentBottom="true">

                <ImageView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/clubs_jack"
                    android:layout_centerInParent="true"
                    />

            </RelativeLayout>

        </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:layout_weight=".25"
        android:layout_marginBottom="10sp"
        app:layout_constraintTop_toTopOf="@+id/guideline">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Card in hand:" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/clubs_4"
                android:layout_centerInParent="true"
                />
            <ImageView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/clubs_3"
                android:layout_centerInParent="true"
                />
            <ImageView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/clubs_8"
                android:layout_centerInParent="true"
                />
        </LinearLayout>

    </LinearLayout>


</LinearLayout>
